<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:weightSum="6"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/light_grey"
        android:orientation="horizontal"
        android:layout_weight="0.5">
        <ImageView
            android:layout_width="21dp"
            android:layout_height="22dp"
            android:src="@drawable/femto_logo"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Femto"
            android:textSize="18dp"
            android:textColor="@color/ligth_blur"
            android:layout_marginStart="13dp"
            android:layout_marginTop="12dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_weight="0.5">
        <androidx.cardview.widget.CardView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="28dp"
            android:backgroundTint="@color/light_grey"
            app:cardCornerRadius="10dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_back"
                android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="My Profile"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:gravity="center"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1.5"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="28dp"
            android:backgroundTint="@color/light_grey"
            app:cardCornerRadius="10dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sample_photo"
                android:layout_gravity="center"
                />
            
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Radhey Shyam Maan"
                android:textColor="@color/ligth_blur"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8058101256"
                android:textColor="@color/grey"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:text="Premium Member"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:weightSum="2"
                >
                <ProgressBar
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="170dp"
                    android:layout_height="14dp"
                    android:layout_gravity="bottom"
                    android:progressTint="@color/ligth_blur"

                    android:layout_weight="1"
                    android:progress="60"/>
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="23dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/crown"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3">

        <androidx.cardview.widget.CardView
            android:id="@+id/edit_profile"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/light_grey"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="25dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.55"
                    android:src="@drawable/ic_edit" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:textStyle="bold"
                    android:layout_weight="2.1"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="11dp"
                    android:src="@drawable/ic_collapse"
                    android:layout_gravity="center"
                    android:layout_weight="0.25"
                    />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/myMembership_button"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/light_grey"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_medal"
                    android:layout_gravity="center"
                    android:layout_weight="0.55"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Membership"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_weight="2.1"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="11dp"
                    android:src="@drawable/ic_collapse"
                    android:layout_gravity="center"
                    android:layout_weight="0.25"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/light_grey"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_send_feedback"
                    android:layout_gravity="center"
                    android:layout_weight="0.55"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send Feedback"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_weight="2.1"/>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="11dp"
                    android:layout_weight="0.25"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_collapse" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/light_grey"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            android:elevation="0dp"
            android:layout_marginTop="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_privacy_policy"
                    android:layout_gravity="center"
                    android:layout_weight="0.55"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy Policy"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_weight="2.1"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="11dp"
                    android:src="@drawable/ic_collapse"
                    android:layout_gravity="center"
                    android:layout_weight="0.25"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_logout"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Out"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join Our Community"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:background="@color/ligth_blur"
        android:layout_weight="0.25"
        android:padding="4dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.25"
        android:gravity="center">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_linkedin"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/ic_instagram"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_telegram"/>


    </LinearLayout>
</LinearLayout>