<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MemberShipActivity">
    <LinearLayout
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/light_grey"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="21dp"
                android:layout_height="22dp"
                android:src="@drawable/femto_logo"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Femto"
                android:textSize="18dp"
                android:textColor="@color/ligth_blur"
                android:layout_marginStart="13dp"
                android:layout_marginTop="12dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/back_to_profile_from_membership"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="28dp"
                android:backgroundTint="@color/light_grey"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_back"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="My Membership"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginEnd="60dp"
                android:layout_marginTop="20dp"
                android:gravity="center"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active Plan"
            android:textColor="@color/dark_grey"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:layout_marginTop="20dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/sky_blue"
            app:cardCornerRadius="6dp"
            android:layout_marginTop="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free Plan"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <View
                    android:layout_width="300dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="@color/brown"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free Up 1 GB/month"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"/>
                <ProgressBar
                    android:id="@+id/freeplan_progressBar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="270dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:progressTint="@color/ligth_blur"
                    android:progressDrawable="@drawable/bg_linear_progressbar"
                    android:progress="60"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="0.6 GB of 1 GB used"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/grey_01"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upgrade Plan"
            android:textColor="@color/dark_grey"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/sea_green"
            app:cardCornerRadius="6dp"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Basic Plan"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        android:layout_weight="1.7"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹ 35"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"/>
                </LinearLayout>

                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/brown"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:weightSum="2">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_tick"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Free Up 10 GB"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/brown"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:weightSum="2">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_tick"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lifetime Access"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/brown"/>
                </LinearLayout>

                <Button
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:text="Pay Now"
                    android:layout_marginTop="10dp"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/pink"
            app:cardCornerRadius="6dp"
            android:layout_marginTop="18dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Standard Plan"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        android:layout_weight="1.7"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/standard_plan_price"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"/>
                </LinearLayout>

                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/brown"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:weightSum="2">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_tick"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Free Up 10 GB"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/brown"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:weightSum="2">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_tick"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lifetime Access"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/brown"/>
                </LinearLayout>

                <Button
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:text="Pay Now"
                    android:layout_marginTop="10dp"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/light_orange"
            app:cardCornerRadius="6dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Premium Plan"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        android:layout_weight="1.7"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:text="@string/premium_plan_price"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/brown"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:weightSum="2">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_tick"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Free Up 10 GB"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/brown"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:weightSum="2">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_tick"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lifetime Access"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/brown"/>
                </LinearLayout>

                <Button
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:text="Pay Now"
                    android:layout_marginTop="10dp"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>